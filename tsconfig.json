{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "node",
      "hardhat"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
     "baseUrl": ".",   
     "paths": {
      "@/*": ["./*"]                      
    }, 
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "contracts",
    "hardhat.config.ts",
    "scripts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
